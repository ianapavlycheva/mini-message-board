<!DOCTYPE html>
<html>
  <head>
    <title>Mini Message Board</title>
  </head>
  <body>
    <h1>Mini Message Board</h1>
    <ul>
      <% messages.forEach(message => { %>
      <li>
        <strong><%= message.user %></strong>: <%= message.text %>
        <em>(<%= message.added.toLocaleString() %>)</em>
      </li>
      <% }) %>
    </ul>
    <p><a href="/new">Add a new message</a></p>
  </body>
</html>
